<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewEventsActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/tv_event_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_event_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/event_poster_desc"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/tv_event_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/tv_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/tv_event_date_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/tv_event_date_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/tv_event_occur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />
    
  	<TextView
        android:id="@+id/tv_event_no_of_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="@dimen/normal_font_size" />
  	
  	<Button 
	    android:id="@+id/btn_check_in"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:text="@string/check_in"/>

</LinearLayout>