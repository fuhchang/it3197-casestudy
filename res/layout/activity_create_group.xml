<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateGroupActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gName"
        android:hint="" />

    <EditText
        android:id="@+id/txtGname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/textView1"
        android:hint="Group Name"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
     <TextView
        android:id="@+id/gType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_below="@+id/textView1"
        android:text="@string/gType" />

       <Spinner
           android:id="@+id/spinnerType"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:paddingTop="5dp"
           android:layout_alignParentRight="true"
           android:layout_alignTop="@+id/gType"
           android:layout_toRightOf="@+id/textView1"
            />
       
       <TextView
        android:id="@+id/gDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_below="@+id/gType"
        android:text="@string/gDesc" />

       <EditText
           android:id="@+id/txtDesc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:paddingTop="5dp"
           android:layout_alignLeft="@+id/spinnerType"
           android:layout_below="@+id/spinnerType"
           android:layout_marginTop="32dp"
           android:ems="10"
           android:inputType="textMultiLine" />
       
       
		<Button 
		    android:id="@+id/btnSubmit"
		    android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
           	android:layout_below="@+id/txtDesc"
           	android:text="Create"
		    />
</RelativeLayout>